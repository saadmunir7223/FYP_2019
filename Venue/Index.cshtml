@model IEnumerable<SportAholics.ViewModels.VenueVm>

@{
    ViewBag.Title = "Venue List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/datatables.css" rel="stylesheet" />
<div class="content">
    <div class="container-fluid">
        <br />
        <div class="row">
            <div class="col-md-12">
                <div class="card strpied-tabled-with-hover" style="opacity: 0.8;background: rgba(18, 39, 23, 0.2);background-size: cover;border: 1px solid rgba(255, 255, 255, 0.52);">
                    @*<div class="card-header ">
                            <h4 class="card-title">Venu</h4>
                            <p class="card-category">Used For Lookup Venu</p>
                        </div>*@@*class="table table-hover table-striped" style="font-size:small"*@
                        <div class="card-body  table-responsive" style="overflow:auto">
                            <table id="venutble" class="display table-bordered  dataTable small" style="width:100%;color:#ffffff;">
                                <thead style="color:rgb(255, 255, 255)">
                                    <tr>
                                        <th>
                                            Venue
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.SportCat)
                                        </th>
                                        <th class="text-center">
                                            @Html.DisplayNameFor(model => model.Capacity)
                                        </th>
                                        @*<th class="text-center">
                                            Date
                                        </th>*@
                                        <th class="text-center">
                                           Time Slot
                                        </th>
                                       
                                        
                                            @*<th>
                                                @Html.DisplayNameFor(model => model.MaxPlayers)
                                            </th>*@
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td>                                          
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SportCat)
                                            </td>
                                            <td class="text-right">
                                                @Html.DisplayFor(modelItem => item.Capacity)
                                            </td>
                                            @*<td class="text-center">
                                                @Html.DisplayFor(modelItem => item.Date)
                                            </td>*@
                                            <td class="text-center">
                                                @Html.DisplayFor(modelItem => item.StartDateTime) To
                                                @Html.DisplayFor(modelItem => item.EndDateTime)
                                            </td>                                          
                                            <td>
                                                <a class="btn-xs btn-primary" href="@Url.Action("Edit", new { id = item.VenuelD })">Edit</a>                                               
                                                @Html.ActionLink("Delete", "Delete", new { id = item.VenuelD }, new { onclick = "return confirm('Are you sure you wish to delete this Venue?');", @class = "btn-xs btn-danger" })
                                            </td>
                                        </tr>}
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <br />
            <br />
        </div>
    </div>

    @section Scripts {
        @*@Scripts.Render("~/bundles/jqueryval")*@
        <script src="~/Scripts/jquery.3.2.1.min.js"></script>
        <script src="~/Content/datatables.js"></script>
        <script src="~/Content/datatables.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#venutble').DataTable();
            });
        </script>
    }